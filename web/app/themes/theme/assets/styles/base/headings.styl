h1,
h2,
h3,
h4,
h5,
h6,
.o-heading
  font-family $base--font-heading
  font-style normal
  text-transform uppercase
  color $base-font-color

.c-heading--home
  font-size $size--kilo
  font-weight 100
  letter-spacing rem(2px)
  color $color--white
  +media-query( $screen, $bp--tablet )
    font-size $size--kilo
  +media-query( $screen, $bp--desktop )
    font-size $size--kilo