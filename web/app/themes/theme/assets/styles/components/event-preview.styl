.event-preview__wrapper
  float left
  width 100%

.event-preview__item
  position relative
  float left
  width 100%
  padding-bottom 100%
  border-bottom solid 1px white
  border-left solid 1px white
  background-color $color--lemon
  background-position center
  background-size cover

.event-preview__item--disabled
  opacity 0.5

.event-preview__content
  display block
  absolute false false 0
  padding rem(25px)

.event-preview__image-overlay
  display block
  position absolute
  size 100%

.event-preview__image-overlay--solid
  background-color $color--carbon-black
  opacity 0.3
  &:hover,
  &:focus
    cursor pointer
    background-color $color--yolk
    opacity 0.3

.event-preview__image-overlay--gradient
  background-image linear-gradient(45deg, rgba(0,0,0,0.9) 0%,rgba(0,0,0,0.4) 45%,rgba(0,0,0,0) 70%)

.event-preview__year
  float left
  margin-bottom rem(10px)
  font-family $base--font-heading
  font-weight $weight--thin
  font-size $size--epsilon
  letter-spacing rem(2px)
  color $color--white
  background-color rgba(51, 209, 220, 0.5)
  padding rem(4px)

.event-preview__title
  float left
  width 100%

