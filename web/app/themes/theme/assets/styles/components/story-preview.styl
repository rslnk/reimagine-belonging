.stories-previews__wrapper
  margin-left 3px

.story-preview__item
  position relative
  float left
  width 100%
  padding-bottom 100%
  border solid rem(1px) white
  padding rem(1px)
  background $color--blueberry
  background-position center
  background-size cover
  &:hover,
  &:focus
    cursor pointer
    .story-preview__image-overlay--solid
      background-color $color--mint
      opacity .3

  +media-query($screen, $bp--tablet)
    width 50%
    padding-bottom 50%
  +media-query($screen, $bp--tablet--landscape)
    width 33.333333333333336%
    padding-bottom 33.333333333333336%
  +media-query($screen, $bp--desktop)
    width 25%
    padding-bottom 25%
  +media-query($screen, $bp--desktop--medium)
    width 20%
    padding-bottom 20%

.story-preview__content
  display block
  position absolute
  size 100%
  padding rem(25px)
  background-image linear-gradient(45deg, rgba(0, 0, 0, .8) 10%, rgba(0, 0, 0, 0) 60%)

.story-preview__item--disabled
  opacity: .5

.story-preview__image-overlay
  display block
  position absolute
  size 100%

.story-title
  ///absolute rem(25px) false
  position absolute
  top 20px

.story-hero
  //absolute false false rem(25px)
  position absolute
  bottom rem(25px)
  font-family $base--font-heading
  font-size $size--delta
  font-style normal
  font-weight $weight--thin
  letter-spacing rem(2px)
  text-transform uppercase
  color $color--white
  strong, em, b
    font-weight $weight--regular

.post-format-icon
  display block
  position absolute
  bottom rem(20px)
  right rem(25px)
  size rem(35px)
  background-size: 100% auto

.story-preview__image-overlay--solid
  &.red
    background-image linear-gradient(0deg, rgba(232, 22, 198, .4) 10%, rgba(232, 22, 198, .1) 70%)
  &.orange
    background-image linear-gradient(0deg, rgba(224, 118, 20, .4) 10%, rgba(236, 168, 98, .1) 70%)
  &.yellow
    background-image linear-gradient(0deg, rgba(236, 195, 51, .4) 10%, rgba(236, 195, 51, .1) 70%)
  &.green
    background-image linear-gradient(0deg, rgba(10, 144, 116, .4) 10%, rgba(10, 144, 116, .25) 70%)
  &.blue
    background-image linear-gradient(0deg, rgba(18, 225, 238, .4) 10%, rgba(18, 225, 238, .15) 70%)
  &.indigo
    background-image linear-gradient(0deg, rgba(19, 142, 231, .4) 10%, rgba(19, 142, 231, .1) 70%)
  &.violet
    background-image linear-gradient(0deg, rgba(47, 65, 224, .4) 10%, rgba(47, 65, 224, .1) 70%)

