.story-preview__item
  position relative
  float left
  width 100%
  padding-bottom 100%
  border-bottom solid 1px white
  border-left solid 1px white
  background $color--blueberry
  background-position center
  background-size cover
  &:hover,
  &:focus
    cursor pointer
    .story-preview__image-overlay--solid
      background-color $color--mint
      opacity .4

  +media-query($screen, $bp--tablet)
    width 50%
    padding-bottom 50%
  +media-query($screen, $bp--tablet--landscape)
    width 33.333333333333336%
    padding-bottom 33.333333333333336%
  +media-query($screen, $bp--desktop)
    width 25%
    padding-bottom 25%
  +media-query($screen, $bp--desktop--medium)
    width 20%
    padding-bottom 20%

.story-preview__content
  display block
  position absolute
  size 100%
  padding rem(25px)
  background-image linear-gradient(45deg, rgba(0, 0, 0, .9) 10%, rgba(0, 0, 0, .4) 45%, rgba(0, 0, 0, 0) 70%)

.story-preview__item--disabled
  opacity: .5

.story-preview__image-overlay
  display block
  position absolute
  size 100%

.story-title
  ///absolute rem(25px) false
  position absolute
  top 20px

.story-hero
  //absolute false false rem(25px)
  position absolute
  bottom rem(25px)
  font-family $base--font-heading
  font-size $size--delta
  font-style normal
  font-weight $weight--thin
  letter-spacing rem(2px)
  text-transform uppercase
  color $color--white
  strong, em, b
    font-weight $weight--regular

.post-format-icon
  display block
  position absolute
  bottom rem(20px)
  right rem(25px)
  size rem(35px)
  background-size: 100% auto


.story-preview__image-overlay--solid
  //background-color $color--mint
  background-color $color--white
  opacity .1

