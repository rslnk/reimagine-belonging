// Belonging
.c-site-logo-alt--home-intro
  display inline-block
  size rem(340px) rem(125px)
  background-size contain
   +media-query($screen, $bp--mobile--landscape)
    display inline-block
    size rem(370px) rem(145px)
  +media-query($screen, $bp--tablet--portrait)
    size rem(520px) rem(220px)
  +media-query($screen, $bp--tablet--landscape)
    size rem(720px) rem(300px)
  +media-query($screen, $bp--desktop)
    display none