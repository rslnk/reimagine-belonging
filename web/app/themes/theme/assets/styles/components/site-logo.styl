.o-site-logo
  text-indent rem(-9999px)
  background-size 100% auto

.c-site-logo--nav
  display inline-block
  margin-top rem(20px)
  size rem(220px) rem(25px)
  +media-query($screen, $bp--tablet)
    margin-top rem(5px)
    margin-bottom 0
    size rem(180px) rem(19px)
  +media-query($screen, $bp--tablet--landscape)
    float left
    margin-top rem(5px)
    size rem(200px) rem(19px)

.c-site-logo--intro
  display inline-block
  size 400px 50px
  +media-query($screen, $bp--tablet)
    size 800px 200px
  +media-query($screen, $bp--desktop)
    size 1200px 200px