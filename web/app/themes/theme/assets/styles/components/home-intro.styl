.c-home-intro
  min-height 100%
  padding-top rem(50px)
  padding-bottom rem(50px)
  margin-top rem(-50px)
  margin-bottom rem(-50px)
  background-repeat no-repeat
  background-position 70% 100%
  background-size: cover
  +media-query($screen, $bp--tablet--portrait)
    background-position 50% 30%

.c-home-intro__content
  col(12)

.c-home-intro__buttons-wrap
  display block
  margin-bottom rem(35px)
  +media-query($screen, $bp--tablet--portrait)
    margin-top rem(25px)
    margin-bottom 0
  +media-query($screen, $bp--tablet--landscape)
    margin-top rem(20px)
  +media-query($screen, $bp--desktop--medium)
    margin-top rem(40px)
