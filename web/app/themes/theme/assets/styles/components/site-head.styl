.c-site-head
  position relative
  z-index 100
  border-bottom solid 1px #f3f3f3
  background-color $color--white
  +media-query( $screen, $bp--tablet )
    padding-top: rem(10px)
    padding-bottom: rem(10px)

.c-site-head--home
  width 100%
  position absolute
  padding 0
  top rem(15px)
  border-bottom none
  background-color transparent
  +media-query( $screen, $bp--tablet )
    top rem(25px)
  +media-query( $screen, $bp--desktop )
    top rem(35px)
  +media-query( $screen, $bp--desktop--medium )
    top rem(40px)

.c-donate-button
  position relative
  float right
  margin-top rem(10px)
  margin-left rem(10px)
  color $color--carbon-black
  border rem(1px) solid $color--carbon-black
  cursor pointer
  &:hover,
  &:focus
    color $color--mint
    border rem(1px) solid $color--mint
  +media-query($screen, $bp--tablet)
    margin-top 0
  +media-query($screen, $bp--tablet--landscape)
    display inline-block
    margin-left rem(40px)
  +media-query($screen, $bp--desktop)
    margin-top 0

.c-donate-button--home
  display block
  margin-top rem(10px)
  color $color--white
  border-color $color--white
  &:hover,
  &:focus
    color $color--mint
    border-color $color--mint
  +media-query($screen, $bp--tablet)
    margin-top rem(4px)
    font-size $size--milli
  +media-query($screen, $bp--tablet--landscape)
    font-size $size--centi
  +media-query($screen, $bp--desktop)
    margin-top rem(2px)
    font-size $size--femto

.c-donate-button__text
  padding rem(6px) rem(10px)
  font-family $base--font-body
  font-style normal
  font-weight $weight--regular
  letter-spacing rem(1px)
  text-transform uppercase
  font-size $size--femto
  +media-query($screen, $bp--tablet)
    padding rem(8px) rem(10px)
