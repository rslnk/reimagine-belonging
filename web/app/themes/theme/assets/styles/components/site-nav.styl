.o-site-nav
  clearfix()
  line-height $base--line-height
  letter-spacing rem(1px)

.c-site-nav__list
  list-style none
  overflow visible
  margin rem(10px) 0
  +media-query($screen, $bp--tablet)
    margin 0

.c-site-nav__menu-toggle
  display inline-block
  margin-top rem(9px)
  float right
  text-indent -9999em
  size rem(32px)
  background-size 100% auto
  +media-query($screen, $bp--tablet)
    margin-top 0
    size rem(25px)
  +media-query($screen, $bp--tablet--landscape)
    display none

.c-site-nav--head
  font-family $base--font-body
  font-style normal
  font-weight $weight--regular
  text-transform uppercase

.c-site-nav--footer
  font-family $base--font-body
  font-weight $weight--light

._site-nav__list--head
  display none
  .is-active a
    color $color--mint
  +media-query($screen, $bp--tablet)
    margin-top rem(15px)
  +media-query($screen, $bp--tablet--landscape)
    display block !important
    float right
    margin-top 0

._site-nav__list--head li
  +media-query($screen, $bp--tablet--landscape)
    display inline-block

._site-nav__list--head li a
  display block
  font-size $size--pico
  line-height rem(30px)
  color $base--font-color
  &:hover,
  &:focus
    color $color--mint
  +media-query($screen, $bp--tablet)
    padding 0
    font-size $size--femto
  +media-query($screen, $bp--tablet--landscape)
    padding 0 rem(12px)
  +media-query($screen, $bp--desktop)
    padding 0 rem(20px)
  +media-query($screen, $bp--desktop--medium)
    padding 0 rem(24px)

._site-nav__list--head li:last-of-type a
  // Remove right padding from the last element of navigation
  padding-right 0

.c-site-nav__list--footer
  .is-active a
    color $color--mint
  +media-query($screen, $bp--tablet)
    display block
    float left

._site-nav__list--footer li
  +media-query($screen, $bp--tablet)
    float left

._site-nav__list--footer li a
  display block
  font-size $size--pico
  line-height rem(30px)
  color $color--white
  &:hover,
  &:focus
    color $color--mint
  +media-query($screen, $bp--tablet)
    font-size $size--femto
    padding-right rem(12px)
    padding-left rem(12px)
  +media-query($screen, $bp--desktop)
    padding-right rem(20px)
    padding-left rem(20px)

._site-nav__list--footer li:first-of-type a
  // Remove left padding from the first element of navigation
  padding-left 0
  
.c-site-nav__list--footer-extra
  margin-top rem(20px)
  +media-query($screen, $bp--tablet)
    margin-top 0
  +media-query($screen, $bp--tablet--landscape)
    float right
    margin-top 0
