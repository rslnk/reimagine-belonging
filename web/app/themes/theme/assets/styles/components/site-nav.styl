.c-site-nav
  display block
  float right
  overflow visible
  margin 0
  padding 0
  list-style none
  font-size $size--milli
  line-height $base--line-height
  text-transform uppercase

.c-site-nav__item
  display block
  float right
  padding-right rem(12px)
  padding-left rem(12px)

.c-site-nav__item a
  color $color--ash
  &:hover
    color $color--mint
