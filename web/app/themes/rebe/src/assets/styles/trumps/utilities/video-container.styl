/**
 * oEmbed video content wrapper
 *
 *    16:9 aspect ratio
 *    responsive
 */
.u-video-container
  position relative
  padding-bottom 56.25% // 16:9
  overflow hidden
  max-width 100%
  height auto

  iframe
  object
  embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%
