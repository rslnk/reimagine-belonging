/*
 * Medium-gray theme
 *
 *    --foucs modifier changes background color on element hover/focus
*/
.t-medium-gray
  color $gray--dark
  background-color $gray--medium

.t-medium-gray--focus
  @extend .t-medium-gray
  variations = monochrome($gray--medium)
  &:hover
  &:focus
    background-color variations[1]
