/**
 * Section title
 */
.c-section-title
  @extend .o-heading

  font-weight $regular
  font-size $micro
  letter-spacing rem(1px)

  +below('m')
    margin-bottom rem(15px)

  +between('m', 'l')
    margin-bottom rem(20px)

  +between('l', 'xl')
    margin-bottom rem(20px)

  +above('xl')
    margin-bottom rem(25px)
    font-size $milli
