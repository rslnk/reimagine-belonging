/**
 * Workshop preview caption (short description)
 */
.c-workshop-preview__caption
  @extend .o-paragraph

  font-size rem(15px)
  line-height 1.65
  color $carbon-black + 20%

  +below('l')
    margin-bottom rem(15px)

  +above('l')
    margin-bottom rem(20px)

// Related post modifier
.c-workshop-preview__caption--related
  @extend .c-workshop-preview__caption
  @extend .o-paragraph--small

  font-size rem(13px)
  color $carbon-black + 20%
  margin-bottom rem(15px)
