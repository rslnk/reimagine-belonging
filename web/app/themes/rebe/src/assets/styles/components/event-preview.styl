.event-preview__wrapper
  float left
  width 100%

.event-preview__item
  float left
  border-bottom solid 1px white
  border-left solid 1px white
  background-color $color--lemon

.event-preview__item--disabled
  opacity 0.5

.event-preview__content
  display block
  absolute false false 0
  padding rem(25px)

.event-preview__image-overlay
  display block
  position absolute
  size 100%

.event-preview__image-overlay--solid
  background-color $color--carbon-black
  opacity 0.3
  &:hover,
  &:focus
    cursor pointer
    background-color $color--yolk
    opacity 0.3

.event-preview__image-overlay--gradient
  background-image linear-gradient(0deg, rgba(0, 0, 0, 0.85) 0%, rgba(10, 0, 15, 0.5) 40%, rgba(0, 0, 0, 0) 70%)

.event-preview__year
  float left
  margin-bottom rem(15px)
  padding rem(5px) rem(6px) rem(4px) rem(6px)
  font-family $base--font-heading
  font-size $size--milli
  font-weight $weight--thin
  letter-spacing rem(2px)
  color $color--white
  background-color rgba(255, 180, 20, 0.8)
  +media-query($screen, $bp--tablet)
    margin-bottom rem(15px)
    padding rem(4px) rem(5px) rem(6px) rem(5px)
    font-size $size--centi
    letter-spacing rem(0.5px)
  +media-query($screen, $bp--desktop)
    margin-bottom rem(10px)
    padding rem(5px)
    font-size $size--pico
  +media-query($screen, $bp--desktop--medium)
    margin-bottom rem(15px)
    padding rem(5px) rem(6px) rem(4px) rem(6px)
    font-size $size--milli
    letter-spacing rem(2px)

.event-preview__title
  float left
  width 100%
