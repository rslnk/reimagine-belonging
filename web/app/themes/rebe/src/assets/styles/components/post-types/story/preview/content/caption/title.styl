/**
 * Story preview title
 *
 *    Animation effect:
 *    The story preview title has a special highlight animation effect
 *    on .c-story-preview__content element hover.
 *
 *    The basic higlight animation effect explained here: http://wesbos.com/css-highlight-animation/
 */
.c-story-preview__title
  @extend .o-heading
  
  display inline-block

  font-weight $thin
  text-transform none
  line-height 1.3
  color $white

  strong
  em
  b
    font-weight $semibold

  +between('xs', 'm', orientation: landscape)
    font-size $mega

  +between('xs', 'm', orientation: portrait)
    font-size $kilo

  +between('m', 'l')
    font-size $centi

  +between('l', 'xl')
    font-size $deca

  +above('xl')
    font-size $kilo

  .has-background
    display inline

    // Initial background postion for focus/hover animation
    background-size 201%
    background-position 0 0

    transition .5s ease-in-out // animation defaults
    line-height 1.35

  // Title background gradient colors
  .is-red
    background-image linear-gradient(90deg, rgba($rose, 0) 50%, rgba($rose, .8) 50%)

  .is-orange
    background-image linear-gradient(90deg, rgba($orange, 0) 50%, rgba(saturation($orange, 150%), .8) 50%)

  .is-yellow
    background-image linear-gradient(90deg, rgba($yolk, 0) 50%, rgba(saturation($yolk, 135%), .8) 50%)

  .is-green
    background-image linear-gradient(90deg, rgba($mint, 0) 50%, rgba(saturation($mint, 125%), .8) 50%)

  .is-blue
    background-image linear-gradient(90deg, rgba($sky, 0) 50%, rgba($sky, .65) 50%)

  .is-indigo
    background-image linear-gradient(90deg, rgba($indigo, 0) 50%, rgba(saturation($indigo, 130%), .8) 50%)

  .is-violet
    background-image linear-gradient(90deg, rgba($violet, 0) 50%, rgba($violet, .8) 50%)

// Related post modifier
.c-story-preview__title--related
  @extend .c-story-preview__title

  +between('m', 'l')
    font-size $micro

  +between('l', 'hd')
    font-size $milli

  +above('1600px')
    font-size $deci
