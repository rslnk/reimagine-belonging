/**
 * Quote meta
 *
 *    Wraps:
 *       - `c-quote__meta`
 *         - `c-quote__author`
 *         - `c-quote__source`
 *
 */
.c-quote__meta
  @extend .o-paragraph

  float right
  margin-bottom 0 // overwrites `.o-paragraph`

  text-align right
  line-height 1.2
  color $gray--dark

  strong
    font-weight $medium

// Event post featured story modifier
.c-quote__meta--featured-story
  @extend .c-quote__meta

  float left

  +below('xl')
    font-size $pico

  +between('xl', 'hd')
    font-size $nano

  +above('hd')
    font-size $micro

// Story post modifier
.c-quote__meta--story
  @extend .c-quote__meta

  float left

  +below('xl')
    font-size $nano

  +between('xl', 'hd')
    font-size $micro

  +above('hd')
    font-size $centi
