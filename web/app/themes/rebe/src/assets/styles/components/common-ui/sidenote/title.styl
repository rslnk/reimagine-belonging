/**
 * Sidenote title
 */
.c-sidenote__title
  @extend .o-heading

  margin-bottom rem(15px)
  font-weight $thin
  text-transform uppercase
  line-height 1.3

  strong
  em
  b
    font-weight $regular

  +below('m')
    font-size $centi

  +between('m', 'l')
    font-size $deci

  +between('l', 'xl')
    font-size $hecto

  +between('xl', 'hd')
    font-size rem(34px)

  +above('hd')
    font-size $mega

// Event modifier
.c-sidenote__title--event
  @extend .c-sidenote__title

  color $mint

// Page modifier
.c-sidenote__title--page
  @extend .c-sidenote__title

  color $mint

  +below('m')
    font-size $centi

  +between('m', 'l')
    font-size $deca

  +between('l', 'xl')
    font-size $mega

  +above('xl')
    font-size $tera
    line-height 1.2
