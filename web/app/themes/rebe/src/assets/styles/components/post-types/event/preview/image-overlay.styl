.c-event-preview__image-overlay
  display block
  position absolute
  size 100%

.c-event-preview__image-overlay--solid
  background-color color--carbon-black
  opacity 0.3
  &:hover
  &:focus
    cursor pointer
    background-color color--yolk
    opacity 0.3

.c-event-preview__image-overlay--gradient
  background-image linear-gradient(0deg, rgba(color--black, 0.85) 0%, rgba(10, 0, 15, 0.5) 40%, rgba(color--black, 0) 70%)
