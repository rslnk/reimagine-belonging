/**
 *  Theater view
 *
 *    Styles `o-overlay` layer to create distraction-free view
 *    for modal media content.
 *
*/
.c-theater-view
  @extend .o-overlay

  background-color $black // alpha-channel fallback
  background-color rgba($black, .7) // dark backdrop

  +above('m')
    padding-top 3.5%
    padding-bottom 3.5%

// Workshop post modifier
.c-theater-view--workshop
  @extend .c-theater-view

  background-color rgba($blueberry - 70%, .9) // dark backdrop
