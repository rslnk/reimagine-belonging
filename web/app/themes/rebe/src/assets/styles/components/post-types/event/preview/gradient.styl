/**
 * Event preview image overlay
 */
.c-event-preview__gradient
  display block
  position absolute

  size 100% // spans across entire preview
  transition .5s ease-in

  background-image linear-gradient(0deg, rgba(5, 7, 24, .95) 1%, rgba(5, 7, 24, 0) 70%)

// Related post modifier
.c-event-preview__gradient--related
  @extend .c-event-preview__gradient

  background-image linear-gradient(0deg, rgba(5, 7, 24, .9) 15%, rgba(5, 7, 24, 0) 90%)
