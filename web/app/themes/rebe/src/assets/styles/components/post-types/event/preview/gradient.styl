/**
 * Event preview image overlay
 */
.c-event-preview__gradient
  display block
  position absolute

  size 100%

  // Disable transition until text flickering issue in Safari is solved
  //transition all .3s ease-in // on `.c-event-preview` hover/focus

  opacity .75 // this is set for gradient animation (throug changing opacity)
  background-image linear-gradient(0deg, rgba(5, 7, 24, 1) 3%, rgba(5, 7, 24, .25) 70%)

// Related post modifier
.c-event-preview__gradient--related
  @extend .c-event-preview__gradient

  background-image linear-gradient(0deg, rgba(5, 7, 24, .9) 15%, rgba(5, 7, 24, 0) 90%)
