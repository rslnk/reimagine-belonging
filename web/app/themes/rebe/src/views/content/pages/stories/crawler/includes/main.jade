//- Post type query
:php
  $the_query = new WP_Query([
  	'post_type'        => 'story',
  	'posts_per_page'   => -1,
  	'meta_key'         => 'story_city',
  	'orderby'          => 'meta_value',
  	'order'            => 'DESC'
  ]);

- if($the_query->have_posts()) :
  - while($the_query->have_posts()) : $the_query->the_post()
    
      //- Get Story preview template
      - get_template_part('content/post-types/story/crawler/preview')

    - wp_reset_postdata()    
  - endwhile
- endif
