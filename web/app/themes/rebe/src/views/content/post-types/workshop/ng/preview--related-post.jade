//- Related workshop preview
//- Note: This template must be included into parent element 
//- that has `c-workshop-preview--related` class

//- Wrapper for nested classes (like `in-focus`)
div(ng-class="{'in-focus': mouseHover}")
  header.c-workshop-preview__head
    h2.c-workshop-preview__title--related {{ workshop.title }}

  main.c-workshop-preview__content
    p.c-workshop-preview__caption--related {{ workshop.caption }}

  footer.c-workshop-preview__footer
    div.c-workshop-preview__cta--related
      | {{ siteConfig.workshop_preview_cta_button_label }}
