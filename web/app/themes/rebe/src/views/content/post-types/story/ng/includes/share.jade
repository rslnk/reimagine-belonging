ul.c-post-sharing__list
  h4.c-post-sharing__label {{ siteConfig.share_story_label }}:
  
  //- facebook
  li.c-post-sharing__item
    a(href="#"
      socialshare
      socialshare-provider="facebook"
      socialshare-url="{{ shareUrl }}"
      socialshare-text="{{ story.title }}"
      socialshare-description="{{ story.excerpt }} — {{ story.hero }}, {{ story.city[0].term_name }}"  
      socialshare-via="{{ facebook_app_id }}"
      socialshare-ref="{{ facebook_user_name }}"
    ).c-icon-facebook--circle.c-post-sharing__link--story
      span.u-visually-hidden {{ siteConfig.share_story_label }} Facebook
  
  //- twitter
  li.c-post-sharing__item
    a(href="#"
      socialshare
      socialshare-provider="twitter"
      socialshare-text="{{ story.excerpt }} — {{ story.hero }}, {{ story.city[0].term_name }}"
      socialshare-hashtags="{{ siteConfig.social_hashtags }}"
      socialshare-url="{{ shareUrl }}"
    ).c-icon-twitter--circle.c-post-sharing__link--story
      span.u-visually-hidden {{ siteConfig.share_story_label }} Twitter
  
  //- google plus
  li.c-post-sharing__item
    a(href="#"
      socialshare
      socialshare-provider="google"
      socialshare-url="{{ shareUrl }}"
    ).c-icon-googleplus--circle.c-post-sharing__link--story
      span.u-visually-hidden {{ siteConfig.share_story_label }} Google Plus
