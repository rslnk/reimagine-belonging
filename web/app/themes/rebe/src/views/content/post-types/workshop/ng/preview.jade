article(
  ng-mouseenter="mouseHover=true"
  ng-mouseleave="mouseHover=false"
).c-workshop-preview
  header.c-workshop-preview__head
    h2(ng-bind-html="workshop.title").c-workshop-preview__title

  main.c-workshop-preview__content
    p(ng-bind-html="workshop.caption").c-workshop-preview__caption
    
    //- Details
    div.c-workshop-preview__details
      div(ng-if="workshop.target_group").is-detail
        strong {{ siteConfig.workshop_target_group_label }}: 
        span {{ workshop.target_group }}
      div(ng-if="workshop.duration").is-detail
        strong {{ siteConfig.workshop_duration_label }}: 
        span {{ workshop.duration }}
      div(ng-if="workshop.types").is-detail
        strong {{ siteConfig.workshop_type_label }}: 
        span(ng-repeat="type in workshop.types")
          | {{ type.term_name }}{{ $last ? '' : ($index==term_name.length-2) ? ', and ' : ',&nbsp;' }}
          
  footer.c-workshop-preview__footer
    a(ng-click="openWorkshop(workshop.slug)").c-workshop-preview__cta
      | {{ siteConfig.workshop_preview_cta_button_label }}
