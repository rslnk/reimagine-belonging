//- Set '/crawler' subdirectory for Event and Story post types single templates
- if(get_post_type() == 'event' || 'story' || 'workshop') { $subdir = '/crawler'; } else { $subdir = null; }

- while (have_posts()) : the_post()
  - get_template_part('content/post-types/' . get_post_type() . $subdir . '/single')
- endwhile
