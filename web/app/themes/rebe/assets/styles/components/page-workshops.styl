.c-workshops-intro
  row()
  float left
  padding-top rem(60px)
  padding-bottom rem(40px)

.c-workshops-intro__about
  col(6)
  padding-right rem(60px)
  padding-bottom rem(40px)

.c-workshops-intro__featured
  col(6)

.c-workshops-intro__featured-title
  margin-top rem(10px)
  margin-bottom rem(35px)

.c-workshop-list
  row()
  float left
  padding rem(40px) 0
  background-color $color--blueberry
  clearfix()
  display block
  margin-bottom 40px

.c-workshop-list__title
  margin-top rem(10px)
  margin-bottom rem(35px)
  color $color--white

.c-workshop-about__stats
  margin-top 50px
  height 500px
  background-color $color--blueberry
  font-size $size--tera
  color $color--white
